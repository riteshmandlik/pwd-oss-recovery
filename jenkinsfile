pipeline {
    agent {
        label params.AGENT 
    }

    parameters {
        choice(name: "AGENT", choices: ["any", "devl", "prod"]) 
    }

    stages {
        stage("Devl") {
        when {
                expression { params.AGENT == 'devl' }
            }
            steps {
                echo "Devl Condition is working"
            }
        }    
       stage("Prod") {
        when {
                expression { params.AGENT == 'prod' }
            }
            steps {
                echo "Prod Condition is working"
            }
        }        
        stage("Prod") {
        when {
                expression { params.AGENT == 'any' }
            }
            steps {
                echo "Any Condition is working"
            }
        }        

    
    }
}